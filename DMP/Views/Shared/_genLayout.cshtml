    </script>*@
    <script type="text/javascript">
        {
            var profileId = '@ShieldPortal.Services.Utils.LoggedinProfileID';
        }
    </script>
    <style> 
        .title {
            font-weight: 500; 
        }
        .main-header {
            padding: 10px;
            border-bottom: solid 2px darkorange;
        }
        .page-container {           
            background-color: #fff !important;
        }



    </style>
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    } 
</head>
<body>
    <div class="page-container">
        <div class="main-header row">
            <div class="col-sm-6">
                <a href="/">
                    <img src="~/images/shield.png" alt="Shield Logo" width="160" title="SHIELD" />
                </a>
                <a href="/">
                    <img src="~/images/pepfar.jpg" alt="pepfar logo" width="60" title="pepfar" />
                </a>
                <a href="/">
                    <img src="~/images/HHS.png" alt="HHS logo" width="70" title="HHS" />
                </a>
                <a href="/">
                    <img src="~/images/cdc_logo.png" alt="cdc logo" width="70" title="cdc" />
                </a>
                <a href="/">
                    <img src="~/images/UMB_logo.png" alt="UMB logo" width="200" title="UMB" />
                </a>
            </div>

            <div class="col-sm-4 col-sm-offset-2">
                <div class="pull-right">
                    <ul class="user-info">
                        <li class="profile-info dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#" aria-expanded="false" role="button" aria-haspopup="true">
                                <img width="44" class="img-circle avatar" alt="" src="~/images/Profile-image.png"> <span id="user">@ShieldPortal.Services.Utils.DisplayBadge </span> <span class="caret"></span>
                            </a>
                            <!-- User action menu -->
                            <ul class="dropdown-menu">
                                <li><a id="userdetail" style="cursor:pointer"><i class="icon-user"></i>My profile</a></li>
                                <li><a id="changepassword" style="cursor:pointer"><i class="fa fa-key"></i>Change password</a></li>
                                <li><a href='#' id="logoff"><i class="icon-logout"></i>Logout</a></li>
                            </ul>
                            <!-- /user action menu -->
                        </li>
                    </ul>
                </div>
            </div>
            <!-- User info -->
        </div>

        @RenderBody()

        <div class="row">
            <div class="col-md-push-3 col-md-5">
                <footer class="footer-main">
                    &copy; @DateTime.Now.Year  <span>University of Maryland with funding from the US CDC</span>
                </footer>
            </div>
        </div>

    </div>

   
    @RenderSection("scripts", required: false)
    
  
</body>
</html>
