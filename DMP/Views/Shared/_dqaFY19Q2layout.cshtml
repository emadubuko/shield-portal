            <div class="page-sidebar">

                <div class="sidebar">

                    <div class="sidenav">
                        <a href=@Url.Action("index", "DQAFY2019Q2")>
                            <i class="fa fa-home"></i><span class="title">&nbsp; Home</span>
                        </a>
                        <a href="~/DQAFY2019Q2/Analytics?reportType=Partners">
                            <i class="fa fa-dashboard"></i><span class="title">&nbsp; Dashboard</span>
                        </a>
                        <a href=@Url.Action("DQAAnalysisReport", "DQAFY2019Q2", new { type="Partners"}) s>
                            <i class="fa fa-newspaper-o"></i><span class="title">&nbsp; DQA Analysis report</span>
                        </a>
                        <a href=@Url.Action("UMB_Partner_Report", "DQAFY2019Q2")>
                            <i class="fa fa-bar-chart"></i><span class="title">&nbsp; DQA Report Comparison</span>
                        </a>
                        <a href=@Url.Action("DQAResult", "DQAFY2019Q2")>
                            <i class="fa fa-fax"></i><span class="title">&nbsp; DQA Result</span>
                        </a>
                        <a href=@Url.Action("RadetValidation", "DQAFY2019Q2")>
                            <i class="fa fa-check-square-o"></i><span class="title">&nbsp; RADET Validation</span>
                        </a>
                        <a href=@Url.Action("UploadDQA", "DQAFY2019Q2")>
                            <i class="fa fa-cloud-upload"></i><span class="title">&nbsp;  Upload DQA</span>
                        </a>
                        <a href=@Url.Action("UploadPivotTable", "DQAFY2019Q2")>
                            <i class="fa fa-cloud-upload"></i><span class="title">&nbsp; Site selection (Pivot Table)</span>
                        </a>


                        <button class="dropdown-btn">
                            <i class="fa fa-download"></i>&nbsp; Downloads
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-container">
                            <a href="~/DQAFY2019Q2/DownloadDQATool">
                                DQA tool
                            </a>
                            <a href="~/DQAFY2019Q2/DownloadDQAResource?fileType=SummarySheet">
                                Printable DQA tool
                            </a>
                            <a href="~/DQAFY2019Q2/DownloadDQAResource?fileType=PivotTable">
                                Pivot Table Template
                            </a>
                            <a href="~/DQAFY2019Q2/DownloadDQAResource?fileType=DQAUserGuide">
                                DQA user guide
                            </a>

                        </div>
                    </div>


                </div>
            </div>


        </div>

        @RenderBody()
    </div>

</div>

