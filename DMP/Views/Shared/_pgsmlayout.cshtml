@{
    Layout = "~/Views/Shared/_genLayout.cshtml";
}
@section AddToHead{
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
}
<div class="main-content" style="padding-top: 0px;">
    <div class="row" id="breadcrumb">
        <div class="col-sm-5 col-sm-push-3">
            <ol class="breadcrumb breadcrumb-2">
                <li><a href="/"><i class="icon-folder"></i>Home</a></li>
                <li><a href="/Home/submenu?id=pgsm">Overview</a></li>
                <li class="active">Granular Site Monitoring</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="page-sidebar">
                <div class="sidebar">
                    <ul id="side-nav" class="main-menu navbar-collapse collapse">

                        <li>
                            <a href=@Url.Action("Dashboard", "PGSM") style="color:darkturquoise;">
                                <i class="fa fa-file-text-o"></i><span class="title">&nbsp; Report</span>
                            </a>
                        </li>
                        <li>
                            <a href=@Url.Action("Dashboard", "PGSM") style="color:darkturquoise;">
                                <i class="fa fa-bar-chart"></i><span class="title">&nbsp; Dashboard</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>


            <div class="m-l-20" style="margin-top:15px;">

                <form class="form-horizontal" >
                    <div class="form-group">
                        <div class="col-sm-12">
                            <h5 style="text-decoration:underline;">Filter</h5>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option value="">Select IP</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option value="">Select State</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option value="">Select Site</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8">
                            <a class="btn btn-sm btn-info" id="btnSearch">Refresh</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @RenderBody()
    </div>

</div>

