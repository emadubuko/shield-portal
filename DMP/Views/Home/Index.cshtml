@model List<DMP.ViewModel.DMPViewModel>

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">DMP Dashboard &nbsp;&nbsp;&nbsp;</h4>

                    <a href='@Url.Action("CreateNewDMP","Home")' class="btn btn-info">
                        <i class="fa fa-plus"></i> Create New DMP
                    </a>
                    @*style="background-color: #036eff;border-color: #036eff;"*@
                     
                    <ul class="panel-tool-options">
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Project Title</th>
                                    <th>Owner</th>
                                    <th>Created By</th>
                                    <th>Date Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DMP.ViewModel.DMPViewModel item in Model)
                                {
                                    <tr onclick="window.document.location='@Url.Action("DMPDetails","Home", new RouteValueDictionary(item))';" style="cursor: pointer;">
                                        <td>@item.Title</td>
                                        <td>@item.ProjectTitle</td>
                                        <td>@item.Owner</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.DateCreated</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/loader")
}

