@model List<DMP.ViewModel.DMPViewModel>

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    <style>
        .panel-warning {
    border-color: #929b17;
}

    .panel-warning > .panel-heading {
        color: #FFF;
        background-color: #929b17;
        border-color: #929b17;
    }
    </style>
}

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">DMP Dashboard &nbsp;&nbsp;&nbsp;</h4>

                    <div style="float: right;padding: 0;margin-bottom: 0;margin-right: -0.5em;">
                        <a id="dmpCreate" href='@Url.Action("CreateDMP","DMP")' class="btn btn-black btn-outline">
                            <i class="fa fa-plus"></i> Create New DMP
                        </a>
                        <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36">

                        <a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a>
                        </div>
                        
                        @*style="background-color: #036eff;border-color: #036eff;"*@
                     
                    </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Project Title</th>
                                    <th>Owner</th>
                                    <th>Created By</th>
                                    <th>Date Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DMP.ViewModel.DMPViewModel item in Model)
                                {
                                    <tr onclick="window.document.location='@Url.Action("DMPDetails","DMP", new RouteValueDictionary(item))';" style="cursor: pointer;">
                                        <td>@item.Title</td>
                                        <td>@item.ProjectTitle</td>
                                        <td>@item.Owner</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.DateCreated</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/loader")
    <script>
        $("#dmpCreate").click(function (e, n) {
            $("#loadImg").show();
            $('#dmpCreate').disabled = true;


        });

    </script>
}

