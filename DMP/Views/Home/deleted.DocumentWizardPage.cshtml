@section Scripts
{
    @Scripts.Render("~/bundles/CreateDMPJs")
    <script>
        $(document).ready(function () {
            $('#PhoneNumberOfAuthor,#PhonenumberofApprover').keypress(function (key) {
                if (key.charCode < 48 || key.charCode > 57)
                    if (key.charCode != 43) {
                        $('#my_modal').on('show.bs.modal', function (e) {
                            $('#warningbox').val('invalid input');
                        });
                        $('#myModal').modal('show');
                        return false;
                    }
            });
            $("input").attr("autocomplete", "off");

            var projectId;
            var documentId;
            function SaveAndContinue(e, a) {

                var formdata = $('#rootwizard-2')[0].elements;//$('#ProjectProfile,#DocumentRevisions,#DataCollection,#QualityAssurance,#DataCollectionProcesses,#DataStorage,#IntellectualPropertyCopyrightAndOwnership,#DataAccessAndSharing,#DataDocumentationManagementAndEntry,#PostProjectDataRetentionSharingAndDestruction,#Planning textarea input');

                var viewModel = {};
                $.each(formdata, function (name, formElements) {
                    viewModel[formElements.id] = formElements.value;
                });
                viewModel["documentID"] = documentId;

                $.ajax({
                    type: "POST",
                    url: a,
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(viewModel),
                    dataType: 'json',
                    cache: false,
                }).done(function (result) {

                    if (result.documentId == undefined) {
                        alert(result);
                    }
                    else {
                        if (e.currentTarget.id === "finishbtn") {
                            window.location.href = "/DocumentViewer/DocumentPreview?documnentId=" + result.documentId;
                        }

                        projectId = result.projectId;
                        documentId = result.documentId;

                        //project = result.TheDMP.TheProject;
                        //documentId = result.Id;


                        var nxtcss = $("#nextbtn").attr('class');
                        if (nxtcss === "next disabled") {
                            $("#finish").removeClass("removeVisibility");
                        }
                    }

                }).error(function (xhr, status, err) {
                    console.log(err);
                });
            }

            $("#SaveNext,#finishbtn").click(function (e, n) {
                if (projectId == undefined) {
                    var theUrl = '@Url.Action("SaveNext", "Home")';
                    SaveAndContinue(e, theUrl);
                }
                else {
                    var theUrl = '@Url.Action("EditDocumentNext", "Home")';
                    SaveAndContinue(e, theUrl);
                }

            });

        });
    </script>
}
