@model  ShieldPortal.ViewModel.EditDocumentViewModel2
@{
    ViewBag.Title = "Preview Document";
}
@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    <style>
        .Adjusted-header {
            padding-left: 30%;
            padding-top: 10px;
            height: 30px;
            /*background-color: #004b17;*/
            color: steelblue;
            font-weight: bold;
        }
        .commentBox {
            float: right;
            border-color: steelblue;
            color: steelblue;
        }
            .commentBox:hover {
                color: #333;
                background-color: steelblue;
            }
        .form-horizontal .form-group {
            border-bottom: 1px solid #ccc;
        }

        div > span {
            color: #333;
        }
        .flexheader{
            /*col-sm-offset-7*/
            display:flex;
            flex-direction:row;
            justify-content:flex-end
        }
