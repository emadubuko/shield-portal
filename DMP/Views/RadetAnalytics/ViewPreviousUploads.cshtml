            var ipscount = '@Model.Select(x=>x.IP).Distinct().Count()';
            var model_data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((ViewBag.selectModel as ShieldPortal.ViewModel.RandomizerDropDownModel).IPLocation, Newtonsoft.Json.Formatting.None,
