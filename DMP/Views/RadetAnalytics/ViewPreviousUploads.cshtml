    <style>
        .form-control {
            color: #29b6f6;
        }

        form {
            color: #29b6f6;
        }

        .error-summary {
            text-decoration: underline;
            font-size: 16px;
            color: red;
            cursor: pointer;
        }

        .table > thead > tr > th {
            text-transform: capitalize;
            font-weight: bolder;
        }

        .btn-sm, .btn-group-sm > .btn {
            padding: 4px 6px;
            font-size: 10px;
        }

        .dataTables_wrapper .dataTables_processing {
            position: absolute;
            top: 5%;
