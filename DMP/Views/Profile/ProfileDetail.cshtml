@model  DAL.Entities.Profile

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    @Styles.Render("~/bundles/mysiteCss")
    <style>
    </style>
}

<div class="main-content">
    <a href="javascript:history.back()" class="btn btn-default" style="color:#929b17"><i class="icon-left-open"></i><b>Go Back</b></a>
    <hr />

    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <h4 class="panel-title">Profile Details</h4>
                    </div>
                    <div class="col-lg-2">
                        <a href="~/profile/profileEdit?profileId=@Model.Id" class="btn btn-black btn-outline" style="line-height:10px;">
                            <i class="fa fa-paste"></i><span>&nbsp;Edit</span>
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">

                        @foreach (var field in typeof(DAL.Entities.Profile).GetProperties().Where(x => !Attribute.IsDefined(x, typeof(System.Xml.Serialization.XmlIgnoreAttribute))).ToArray())
                        {
                            if (field.Name == "Organization" && Model.Organization != null)
                            {
                                <div class="form-group">
                                    <label class="col-sm-3">@DAL.Utilities.Utilities.PasCaseConversion(field.Name)</label>
                                    <div>
                                        <span>@Model.Organization.Name</span>
                                    </div>
                                </div>
                            }
                            else if (field.Name == "Password" || field.Name == "OrganizationId" || field.Name == "Title")
                            {
                                continue;
                            }
                            else
                            {
                                <div class="form-group">
                                    <label class="col-sm-3">@DAL.Utilities.Utilities.PasCaseConversion(field.Name)</label>
                                    <div>
                                        <span>@DAL.Utilities.Utilities.PasCaseConversion(field.GetValue(Model))</span>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{ 
    @Scripts.Render("~/bundles/dataTables") 
}