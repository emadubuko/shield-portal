
@{
    Layout = "~/Views/Shared/_mpmlayout.cshtml";
}

<div class="col-sm-8">
    <div class="panel panel-default" style="border-color: darkturquoise;">
        <div class="panel-heading clearfix " style="background-color:darkturquoise; border-color: darkturquoise;color:#fff">
            Upload Report
        </div>
        <div class="panel-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 control-label"> Upload:</label>
                    <div class="col-md-7">
                        <input type="file" class="form-control" id="fileUpload" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 col-sm-push-2">
                        <button id="upload" type="submit" class="btn btn-sm btn-default" style="background-color:darkturquoise;color:#fff"><i class="fa fa-upload"></i> &nbsp; Upload</button>
                        <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36">
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-sm-3 col-sm-push-2">
                        <hr />
                        <label id="error" style="display:none;"></label>
                    </div>
                </div> 
            </form>
           
        </div>
    </div>
</div>


@section Scripts
{
    <script>
            $(document).ready(function () {

                $("#upload").click(function (e, n) {
                    $("#error").empty();
                    $('#upload').prop("disabled",true);
                    $("#loadImg").show();

                    var data = new FormData();
                    var file = $('form input[type=file]')[0].files[0];
                    data.append('file', file);

                    let url = '/MPM/ProcessFile';
                    $.ajax({
                        type: "POST",
                        url: url,
                        contentType: false,
                        processData: false,
                        data: data,
                        cache: false,
                    }).done(function (result) {
                        $('#upload').prop("disabled", false);
                        $("#loadImg").hide();

                        $("#error").empty();

                        $("#error").append(result);
                        $("#error").show();

                        //if (result.split('|')[0] == "00") {
                        //    $("#error").append('<span style="color:green;">' + result.split('|')[1] + '</span>');
                        //}
                        //else {
                        //    $("#error").append('<span style="color:red;">' + result.split('|')[1] + '</span>');
                        //}

                    }).error(function (xhr, status, err) {
                        $('#upload').prop("disabled", false);
                        $("#loadImg").hide();
                        $("#error").empty();
                        $("#error").append(err);
                        $("#error").show();
                    });
                    return false;
                });
            });
    </script>
}
