@model List<CommonUtil.Entities.Organizations>

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss") 
}

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    IMPLEMENTING PARTNERS
                    <div class="col-sm-offset-12">
                        <a id="dmpCreate" href='@Url.Action("CreateOrganization", "Organization")' class="btn btn-black btn-sm btn-outline">
                            <i class="fa fa-plus"></i> Create New IP
                        </a>
                        <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36"> 
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Unique Id</th>
                                    <th>Short Name</th>
                                    <th>Mission Partner</th> 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr onclick="window.document.location='/Organization/OrganizationDetail?OrgId=@item.Id'" style="cursor: pointer;">
                                        <td>@item.Id</td>
                                        <td>@item.ShortName</td>
                                        <td>@item.MissionPartner</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    
    @Scripts.Render("~/bundles/dataTables") 
    <script>
        $("#dmpCreate").click(function (e, n) {
            $("#loadImg").show();
            $('#dmpCreate').disabled = true;
        });

    </script>
}

