@model List<CommonUtil.Entities.Organizations>
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss") 
}

<div class="col-md-7">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <i class="fa fa-bank"></i>  IMPLEMENTING PARTNERS
            <span class="col-sm-push-11 col-sm-2">
                <a id="dmpCreate" href='@Url.Action("CreateOrganization", "Organization")' class="btn btn-black btn-sm btn-outline">
                    <i class="fa fa-plus"></i> Create New IP
                </a>
                <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36">
            </span>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr style="color: #000000;">
                            <th>Name</th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.document.location='/Organization/OrganizationDetail?OrgId=@item.Id'" style="cursor: pointer;">
                                <td>@item.Name (@item.ShortName)</td> 
                                <td><a class="btn btn-sm btn-outline btn-danger" style="text-transform:lowercase">click to view details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/CreateDMPJs") 
      
    <script>
        $("#dmpCreate").click(function (e, n) {
            $("#loadImg").show();
            $('#dmpCreate').disabled = true;
        });
        
    </script>
}

