@model List<DAL.Entities.Organizations>

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    <style>
        .panel-warning {
            border-color: #929b17;
        }

            .panel-warning > .panel-heading {
                color: #FFF;
                background-color: #929b17;
                border-color: #929b17;
            }
    </style>
}

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    
                    <div style="float: right;padding: 0;margin-bottom: 0;margin-right: -0.5em;">
                        <a id="dmpCreate" href='@Url.Action("CreateOrganization", "Organization")' class="btn btn-black btn-outline">
                            <i class="fa fa-plus"></i> Create New IP
                        </a>
                        <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36">

                        <a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a>
                    </div>                     

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Unique Id</th>
                                    <th>Short Name</th>
                                    <th>Type</th> 
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr onclick="window.document.location='/Organization/OrganizationDetail?OrgId=@item.Id'" style="cursor: pointer;">
                                        <td>@item.Id</td>
                                        <td>@item.ShortName</td>
                                        <td>@DAL.Utilities.Utilities.PasCaseConversion(Enum.GetName(typeof(DAL.Entities.OrganizationType), item.OrganizationType))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/loader")
    <script>
        $("#dmpCreate").click(function (e, n) {
            $("#loadImg").show();
            $('#dmpCreate').disabled = true;
        });

    </script>
}

