@model List<ShieldPortal.ViewModel.DMPViewModel>

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
     
}

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">ShieldPortal Dashboard &nbsp;&nbsp;&nbsp;</h4>

                    <div class="col-sm-offset-12">
                        <a id="dmpCreate" href='@Url.Action("CreateDMP","ShieldPortal")' class="btn btn-black btn-sm btn-outline">
                            <i class="fa fa-plus"></i> Create New ShieldPortal
                        </a>
                        <img id="loadImg" style="display:none" class="center" src="~/images/spinner.gif" width="36">
                        </div>                      
                    </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Project Title</th>
                                    <th>Owner</th>
                                    <th>Created By</th>
                                    <th>Date Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ShieldPortal.ViewModel.DMPViewModel item in Model)
                                {
                                    <tr onclick="window.document.location='@Url.Action("DMPDetails","ShieldPortal", new RouteValueDictionary(item))';" style="cursor: pointer;">
                                        <td>@item.Title</td>
                                        <td>@item.ProjectTitle</td>
                                        <td>@item.Owner</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.DateCreated</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{    @Scripts.Render("~/bundles/CreateDMPJs")
    @Scripts.Render("~/bundles/dataTables") 
    <script>
        $("#dmpCreate").click(function (e, n) {
            $("#loadImg").show();
            $('#dmpCreate').disabled = true;


        });

    </script>
}

