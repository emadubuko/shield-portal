@model List<ShieldPortal.ViewModel.ScoreCardModel> 

@{
    Layout = "~/Views/Shared/_dmpLayoutPage.cshtml";
}

<div class="col-lg-9">
    <div class="panel panel-warning">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">DMP Score Card</h4>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="dmpList" class="table table-striped table-hover">
                    <thead>
                        <tr style="color:darkorange; text-transform:capitalize;">
                            <th> Partners </th>
                            <th> Project Profile </th>
                            <th> Program Objectives </th>
                            <th> M & E Systems</th>
                            <th> Data Processes </th>
                            <th> Quality Assurance </th>
                            <th> Data Storage </th>
                            <th> Copy Right </th>
                            <th> Data Retention </th>
                            <th> Status </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IP</td>
                                <td><i class=@(item.ProjectProfile ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.ProjectProfile ? "green": "red" );"></i></td>
                                <td><i class=@(item.ProgramObjectives ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.ProgramObjectives ? "green": "red" );"></i></td>
                                <td><i class=@(item.MandE ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.MandE ? "green": "red" );"></i></td>
                                <td><i class=@(item.DataProcesses ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.DataProcesses ? "green": "red" );"></i></td>
                                <td><i class=@(item.QA ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.QA ? "green": "red" );"></i></td>
                                <td><i class=@(item.DataStorage ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.DataStorage ? "green": "red" );"></i></td>
                                <td><i class=@(item.CopyRight ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.CopyRight ? "green": "red" );"></i></td>                                
                                <td><i class=@(item.DataRetention ? "icon-check" : "icon-cancel") style="font-weight: bold; color: @(item.DataRetention ? "green": "red" );"></i></td>
                                <td>@item.Status %</td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
   
    @Scripts.Render("~/bundles/dataTables")

    <script>
        $(document).ready(function () {
            
        })
    </script> 
    }