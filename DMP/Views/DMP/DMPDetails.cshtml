@{
    ViewBag.Title = "DMP Details page";
}

@model ShieldPortal.ViewModel.DMPDocumentViewModel
@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    
}

<div class="main-content">
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">DMP Details</h4>                     
                </div>
                <div class="panel-body" style="padding-top: 0px;">
                    <div class="row filter-wrapper visible-box gray-bg" id="details-box">
                        <div class="col-lg-4">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label>Owner</label>
                                    <div>
                                        <span>@Model.DmpDetails.Owner</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Project Title</label>
                                    <div>
                                        <span>@Model.DmpDetails.ProjectTitle</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>DMP Title</label>
                                    <div>
                                        <span>@Model.DmpDetails.Title</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-4">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label>Created By</label>
                                    <div>
                                        <span>@Model.DmpDetails.CreatedBy</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Date Created</label>
                                    <div>
                                        <span>@Model.DmpDetails.DateCreated</span>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-4">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label>Start Date</label>
                                    <div>
                                        <span>@Model.DmpDetails.StartDate</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>End Date</label>
                                    <div>
                                        <span>@Model.DmpDetails.EndDate</span>
                                    </div>
                                </div>
                            </form>
                        </div>


                    </div>
                    <div style="padding-bottom: 30px;"></div>
                    <div class="gray-bg"><b>Document Revisions</b></div>
                    <div style="padding-bottom: 30px;"></div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr style="background-color:#5d96d3; color:#fff">
                                    <th>Title</th>
                                    <th>Version</th>
                                    <th>Status</th>
                                    <th>Document Creator</th>
                                    <th>Approved By</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ShieldPortal.ViewModel.DMPDocumentDetails item in Model.Documents)
                                {
                                    <tr>
                                        <td>@Model.DmpDetails.Title</td>
                                        <td>@item.Version</td>
                                        <td>@CommonUtil.Utilities.Utilities.PasCaseConversion(item.Status)</td>
                                        <td>@item.DocumentCreator</td>
                                        <td>@item.ApprovedBy</td>
                                        <td>
                                            <a href="~/DMPDocument/WizardPages?dmpId=@item.DMPId&documnentId=@item.DocumentId" class="btn btn-default btn-sm btn-outline">
                                                <i class="fa fa-paste"></i> Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a href="~/DocumentViewer/DocumentPreview?documnentId=@item.DocumentId" class="btn btn-default btn-sm btn-outline">
                                                <i class="fa fa-paste"></i> View details
                                            </a>
                                        </td>
                                        <td>
                                            <a href="~/Home/tracker?documnentId=@item.DocumentId" class="btn btn-default btn-sm btn-outline">
                                                <i class="icon-flow-parallel"></i> View tracker
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts
{    
@Scripts.Render("~/bundles/CreateDMPJs") 
}

