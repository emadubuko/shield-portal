
@{
    ViewBag.Title = "Dashboard";
}


@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    <style>
        .panel-warning {
            border-color: #929b17;
        }

            .panel-warning > .panel-heading {
                color: #FFF;
                background-color: #929b17;
                border-color: #929b17;
            }
    </style>
}




<div class="main-container">
    <div class="main-header row">
        <div class="col-lg-4">

            <!-- User info -->
            <ul class="user-info pull-left">
               
            </ul>
            <!-- /user info -->
        </div>

        <div class="col-lg-8">
            <div class="pull-right">
                <div class="col-lg-4">
                    <select class="form-control" id="selected_year">
                        <option value="2016">2016</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                    </select>
                </div>
                
                <div class="col-lg-6">
                    <select class="form-control" id="selected_period">
                        <option value="Q1 (Oct-Dec)">October - December</option>
                        <option value="Q2 (Jan-Mar)">January - March</option>
                        <option value="Q3 (Apr-Jun)">April - June</option>
                        <option value="Q4 (Jul-Sep)">July - September</option>
                    </select>
                </div>
                <div class="col-lg-2">
                    <button class="btn  btn-primary"><i class="icon-cw"></i></button>
                </div>
               
            
            </div>
        </div>
    </div>
    <!-- Main content -->
    <div class="main-content">

        <h1 class="page-title">Dashboard</h1>
        <br>

        <!-- Row-->
        <div class="row">

            <!-- Online Signup -->
            <div class="col-lg-3">
                <div class="panel minimal secondary-bg">
                    <div class="panel-body">
                        <h2 class="no-margins"><strong id="facilities">0</strong></h2>
                        <p>Total Facilities</p>
                        
                    </div>
                </div>
            </div>
            <!-- /Online Signup -->
            <!-- Last Month Sale -->
            <div class="col-lg-3">
                <div class="panel minimal primary-bg">
                    <div class="panel-body">
                        <h2 class="no-margins"><strong id="submitted">0</strong></h2>
                        <p>Facilities submitted</p>
                    </div>
                   
                </div>
            </div>
            <!-- /last month sale -->
            <!-- New Visits -->
            <div class="col-lg-3">
                <div class="panel minimal teal-bg">
                    <div class="panel-body">
                        <h2 class="no-margins"><strong id="lgas">0</strong></h2>
                        <p>LGAs</p>

                       
                    </div>
                </div>
            </div>
            <!-- /new visits -->
            <!-- Total Revenu -->
            <div class="col-lg-3">
                <div class="panel minimal info-bg">
                    <div class="panel-body">
                        <h2 class="no-margins"><strong id="states">0</strong></h2>
                        <p>States</p>
                       
                    </div>
                </div>
            </div>
            <!-- /total revenu -->
        </div>
        <!-- /row-->
        <!-- Row -->
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading clearfix" style="padding:15px">
                    <h4 class="panel-title">State Summary</h4>

                </div>
                <div class="panel-body">
                    <div class="row" id="state_summary">
                            <center>
                                <img src="/images/Loading_icon.gif" alt="loading" />
                            </center>
                          
                      
                   
                        </div>
                    </div>
                </div>
                </div>
                <!-- /row-->
                <!-- Row-->
                <div class="row">
                    
                        <div class="panel panel-default">
                            <div class="panel-heading clearfix" style="padding:15px">
                                <h4 class="panel-title">Pending Facilities</h4>

                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover" id="output">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Facility Name</th>
                                                <th>Lga</th>
                                                <th>State</th>
                                                <th>Facility Level</th>
                                                <th>Facility Type</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                   
                </div>
                <!-- Row-->
                <!-- /footer -->
            </div>
            <!-- /main content -->
        </div>

@section Scripts
{
     @Scripts.Render("~/bundles/CreateDMPJs")
    @Scripts.Render("~/bundles/dataTables") 

<!--Knob Charts-->
