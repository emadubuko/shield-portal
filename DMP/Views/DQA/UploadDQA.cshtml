
@{
    ViewBag.Title = "UploadDQA";
}

@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    <style>
        .panel-warning {
            border-color: #929b17;
        }

            .panel-warning > .panel-heading {
                color: #FFF;
                background-color: #929b17;
                border-color: #929b17;
            }
    </style>
}

<div class="main-content">
    
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading clearfix" style="padding:15px">
                    <h4 class="panel-title">Upload DQA</h4>
                    
                </div>
                <div class="panel-body">
                    <div class="progress active" id="progress">
                        <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            <span class="sr-only">Loading...Please wait</span>
                        </div>
                    </div>
                    <form class="form-horizontal" method="post" id="form" enctype="multipart/form-data" >
                       
                      
                        <div class="form-group">
                            <label class="col-sm-2 control-label">File</label>
                            <div class="col-sm-10">
                                <input type="file" id="field-file" name="upFile" class="form-control">
                            </div>
                        </div>
                        <div class="line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button class="btn btn-default" id="btnSubmit" type="submit">Upload</button>
                            </div>
                        </div>
                        </form>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="output">
                            <tbody></tbody>
                        </table>
                    </div>


                    </div>
                </div>
            </div>
        <div class="col-lg-2"></div>
                </div>
               
            </div>



@section Scripts
{
    
    @Scripts.Render("~/bundles/CreateDMPJs")
    @Scripts.Render("~/bundles/dataTables") 

    <script>
        $(document).ready(function () {
            $("#progress").hide();
        });
        $("form").submit(function () {
            $("#output tbody").empty();
            $("#progress").show();
            var formData = new FormData($(this)[0]);
            $("#btnSubmit").prop("disabled", true);

            $.ajax({
                url: '/api/dqaapi/post',
                type: 'POST',
                data: formData,
                async: true,
                success: function (data) {
                    $("#output tbody").prepend(data);
                    $("#btnSubmit").prop("disabled", false);
                    $("#progress").hide();
                    //$('#output').append(data);
                },
                cache: false,
                contentType: false,
                processData: false
            });


            return false;
        });
    </script>
}
