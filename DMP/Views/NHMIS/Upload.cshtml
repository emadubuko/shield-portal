
@{ 
    Layout = "~/Views/Shared/_NHMISLayout.cshtml";
}
 
@section AddToHead{
    <script src="~/Scripts/Ultilities.js?v=@DateTime.Now.Ticks.ToString()"></script>
    <script type="text/javascript">
        {
            var previousUpload = @Html.Raw(Json.Encode(Model));
        }
    </script>
    <style>
        .form-control {
            color: forestgreen;
        }

        form {
            color: forestgreen;
        }

        .table > thead > tr > th {
            text-transform: uppercase;
            font-weight: 400;
            text-align: center;
        }
    </style>
}

<div class="col-md-8">
    <p style="color: red;font-weight: bold;">Download pivot table template. Using the pivot table template downloaded, complete it with information reported on DATIM for Q3. After populating the template, upload back on the portal and this information will give you a list of all the sites for which DQAs should be done for Q3. </p>
    <div class="panel panel-success">
        <div class="panel-heading clearfix" style="padding:8px 20%">
            <h5 class="panel-title">UPLOAD DATIM PIVOT TABLE</h5>
        </div>
        <div class="panel-body">
            <div class="progress active" id="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    <span class="sr-only">Loading...Please wait</span>
                </div>
            </div>
            <form>
                <div class="form-group">
                    <label for="up_pivot">DATIM pivot table</label>
                    <input type="file" id="up_pivot" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="NHSR">Nation Health Sector report</label>
                    <input type="file" id="NHSR" class="form-control" required>
                </div>
                <div class="col-sm-push-1 col-sm-1">
                    <a class="btn btn-success" id="btnUpload">Upload</a>
                </div>
            </form>

             
            <br /><br />
            <div class="line-dashed"></div>
            <div class="table-responsive" style="overflow-x:initial" id="pivotTable">
                <div class="col-lg-12">
                    <a class="btn btn-success" id="save_download" style="float:right">Download Selected Sites</a>
                </div>
                <table class="table table-bordered table-hover" id="output" style="width:100%">
                    <thead>
                        <tr>
                            <th>Site</th>
                            <th>HTS_TST </th>
                            <th>HTC_Only</th>
                            <th>HTC_Only_POS</th>
                            <th>PMTCT_STAT (Known result)</th>
                            <th>PMTCT_STAT (Newly identified)</th>
                            <th>PMTCT_STAT (Known at entry)</th>
                            <th>PMTCT_ART</th>
                            <th>PMTCT_EID</th>
                            <th>TX_NEW</th>
                            <th>TX_CURR</th>
                            <th>Total on treatment</th>
                            <th>Selected for DQA</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading clearfix" style="padding:8px 20%">
            <h5 class="panel-title">Previous uploads</h5>
        </div>
        <div class="panel-body">
            <div class="table-responsive" style="overflow-x:initial">
                <table class="table table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>IP</th>
                            <th>Period</th>
                            <th>Date Uploaded</th>
                            <th>Uploaded By</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.IP </td>
                                <td>@item.Period</td>
                                <td>@item.DateUploaded</td>
                                <td>@item.UploadedBy</td>
                                <td><a class="btn btn-sm btn-success downloadsite" id="@item.id" style="float:right">View Selected Sites</a></td>
                            </tr>
                        }*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#progress").hide();
            $("#pivotTable").hide();

            $("#btnUpload").click(function () {
                $("#output tbody").empty();
                $("#progress").show();

                var fdata = new FormData();
                var pivot_file = document.getElementById("up_pivot").files[0];
                var nhs_file = document.getElementById("NHSR").files[0];
                fdata.append('up_pivot', pivot_file);
                fdata.append('NHSR', nhs_file);

                $("#btnUpload").prop("disabled", true);

                $.ajax({
                    url: '/NHMIS/ProcessFileUpload',
                    type: 'POST',
                    data: fdata,
                    cache: false,
                    contentType: false,
                    processData: false
                }).done(function (rdata) {
                   // buildPivotTable($.parseJSON(data));
                    $("#pivotTable").show();
                    $("#btnUpload").prop("disabled", false);
                    $("#progress").hide();
                }).error(function (xhr, status, err) {
                    alert($.parseJSON(xhr.responseText).Message);
                    console.log($.parseJSON(xhr.responseText).Message);
                    $("#progress").hide();
                    $("#btnUpload").prop("disabled", false);
                });
                return false;
            });

            function buildPivotTable(dataList) {
                $("#output tbody").empty();
                $.each(dataList, function (i, d) {
                    var html = "<tr> ";
                    html += "<td>" + d.FacilityName + "</td>";
                    html += "<td>" + (d.HTS_TST == 0 ? '' : d.HTS_TST) + "</td>";
                    html += "<td>" + (d.HTC_Only == 0 ? '' : d.HTC_Only) + "</td>";
                    html += "<td>" + (d.HTC_Only_POS == 0 ? '' : d.HTC_Only_POS) + "</td>";
                    html += "<td>" + (d.PMTCT_STAT == 0 ? '' : d.PMTCT_STAT) + "</td>";
                    html += "<td>" + (d.PMTCT_STAT_NEW == 0 ? '' : d.PMTCT_STAT_NEW) + "</td>";
                    html += "<td>" + (d.PMTCT_STAT_PREV == 0 ? '' : d.PMTCT_STAT_PREV) + "</td>";
                    html += "<td>" + (d.PMTCT_ART == 0 ? '' : d.PMTCT_ART) + "</td>";
                    html += "<td>" + (d.PMTCT_EID == 0 ? '' : d.PMTCT_EID) + "</td>";
                    html += "<td>" + (d.TX_NEW == 0 ? '' : d.TX_NEW) + "</td>";
                    html += "<td>" + (d.TX_CURR == 0 ? '' : d.TX_CURR) + "</td>";
                    html += "<td>" + (d.PMTCT_ART + d.TX_CURR) + "</td>";
                    if (d.SelectedForDQA) {
                        html += "<td><i class='icon-check' style='color: green;font-weight: bolder;margin-left: 30%;'></i></td>";
                    }
                    else {
                        html += "<td>-</td>";
                    }
                    html += "</tr>";
                    $("#output tbody").append(html);
                });
            }


            // This must be a hyperlink
            $("#save_download").on('click', function (event) {
                exportTableToCSV.apply(this, [$('#output'), 'selectedsites.csv', '-', 6, 6]);
            });


            $(".downloadsite").click(function (e) {
                var id = e.currentTarget.id;
                for (var z = 0; z < previousUpload.length; z++) {
                    if(previousUpload[z].id == id){
                        var sites = previousUpload[z].Tables;
                        buildPivotTable(sites);
                        $("#pivotTable").show();
                        break;
                    }
                }
            });

        });
    </script>
}
