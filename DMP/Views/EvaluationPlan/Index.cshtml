@model IList<EP.DAL.Entities.Evaluation>

@{
    ViewBag.Title = "Index";
}
 
@section AddToHead{
    @Styles.Render("~/bundles/CreateDMPCss")
    @Styles.Render("~/bundles/mysiteCss")
     
}

<div class="main-content">
    <h1 class="page-title"> </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Programs</h4> 
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Implementing Partner</th>
                                    <th>Program Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <td>Last Edited data</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr onclick="window.document.location='EvaluationPlan/EvaluationDetails?id=@item.Id'" style="cursor: pointer;">
                                        <td>@item.ImplementingPartner.ShortName</td>
                                        <td>@item.ProgramName</td>
                                        <td>@string.Format("{0:dd-MMM-yyyy}", item.StartDate)</td>
                                        <td>@string.Format("{0:dd-MMM-yyyy}", item.EndDate)</td>
                                        <td>@item.Status.ToString().Replace("_", " ")</td>
                                        <td>@string.Format("{0:dd-MMM-yyyy hh:mm:ss}", item.DateCreated)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    @Scripts.Render("~/bundles/CreateDMPJs")
    
}
